@model Climb.ViewModels.BaseViewModel

@{
    ViewBag.Title = "Account-Register";
}

<link rel="stylesheet" href="~/dist/styles/account.css"/>

<form class="form-signin" asp-action="LogInPost" method="post">
    <img class="mb-4" src="~/images/logo/logo-128x128.png" alt="" width="128" height="128">
    <h1 class="h3 mb-3 font-weight-normal">Please Log In</h1>
    @if(ViewData.ContainsKey("LoginFail"))
    {
        <span>Failed to Log In</span>
    }
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" name="Email" class="form-control" placeholder="Email address" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" name="Password" class="form-control" placeholder="Password" required>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="RememberMe" value="remember-me"> Remember me
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Log In</button>
    <div class="mt-2">
        <a asp-action="Register">Register</a>
    </div>
    <div class="mt-4">
        <a asp-action="ForgotPassword">Forgot Password</a>
    </div>
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
</form>